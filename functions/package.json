{
  "name": "functions",
  "description": "Cloud Functions for STARLOGIC",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .js,.ts .",
    "start": "firebase emulators:start --only functions,firestore",
